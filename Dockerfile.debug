FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY debug_flask_webhook_receiver.py .
COPY production_improved_retrieval.py .
COPY retrieve_context.py .
COPY tool_manager.py .
COPY llm_clients/ ./llm_clients/

EXPOSE 5005

# Use debug version
CMD ["python", "debug_flask_webhook_receiver.py", "--port", "5005", "--debug"]